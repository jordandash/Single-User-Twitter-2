<h1>It's For The Birds</h1>

<p class="error">All tweets must be between 1 to 140 characters in length</p>

<%= form_for @tweet do |f| %>
  <%= f.text_field :status %>
  <%= f.submit %>
<% end %>


<div id="tweets">
  <% @tweets.each do |tweet| %>
    <p class="tweet"><%= tweet.status %></p>
  <% end %>
</div>